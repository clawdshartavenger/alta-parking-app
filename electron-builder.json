{
  "appId": "com.alta.parking-monitor",
  "productName": "Alta Parking Monitor",
  "directories": {
    "output": "dist"
  },
  "files": [
    "src/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "chromium-bundle/chromium-1208",
      "to": "chromium"
    }
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      },
      {
        "target": "zip",
        "arch": ["arm64"]
      }
    ],
    "hardenedRuntime": false,
    "gatekeeperAssess": false
  },
  "dmg": {
    "title": "Alta Parking Monitor",
    "contents": [
      { "x": 130, "y": 220 },
      { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "clawdshartavenger",
    "repo": "alta-parking-app"
  }
}
